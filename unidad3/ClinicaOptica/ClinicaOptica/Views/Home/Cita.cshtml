                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Edad" ></label>
                    <input asp-for="Edad" class="form-control" placeholder="Edad" />
                    <span asp-validation-for="Edad" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label class="form-label" asp-for="Email" ></label>
                    <input asp-for="Email" class="form-control" placeholder="Correo Electonico" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                 <div class="mb-3">
                    <label class="form-label" asp-for="NumeroTelefono" ></label>
                    <input asp-for="NumeroTelefono" class="form-control" placeholder="Numero de Telefono" />
                    <span asp-validation-for="NumeroTelefono" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="FechaCita"></label>
                    <input asp-for="FechaCita" class="form-control"/>
                    <span asp-validation-for="FechaCita" class="text-danger"></span>
                </div>


                <div class="mb-3">
                    <label class="form-label" asp-for="Clinica"></label>
                    <input asp-for="Clinica" class="form-control" placeholder="SRC/SPS" />
                    <span asp-validation-for="Clinica" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="Doctor"></label>
                    <input asp-for="Doctor" class="form-control" placeholder="Nombre del Doctor" />
                    <span asp-validation-for="Doctor" class="text-danger"></span>
                </div>

                    
                        

           
            <div class="py-5">

                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>
            
               
        </form>

