<h2>Ejemplo 14: Formularios</h2>
<form>
    <div class="mb-3">
        <label class="form-label">Correo Electronico</label>
        <input type="email" name="corre" class="form-control" placeholder="Ingrese su correo" />
    </div>

    <div class="mb-3">
        <label class="form-label">Descripcion</label>
        <textarea class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Color Favorito</label>
        <select class="form-select">
            <option selected>Color Favorito</option>
            <option value="1">Azul</option>
            <option value="2">Rojo</option>
            <option value="3">Verde</option>
        </select>
    </div>

    <div>
        <div class="mb-3">
            <label class="form-check-label">Es Empleado</label>
            <input type="checkbox" class="form-check-input" />
        </div>
    </div>

    <div class="mb-3">
        <label class="form-check-label">Es Mujer</label>
        <input type="radio" name="genero" value="F" class="form-check-input" />
    </div>

    <div class="mb-3">
        <label class="form-check-label">Es Hombre</label>
        <input type="radio" name="genero" value="M" class="form-check-input" />
    </div>

    <div class="mb-3">
        <label class="form-label">Correo Electronico</label>
        <input type="email" name="corre" class="form-control" placeholder="Ingrese su correo" disabled />
    </div>

    <div class="mb-3 form-floating">
        <input type="email" name="corre" class="form-control" placeholder="Ingrese su correo" />
        <label class="form-label">Correo Electronico</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" name="contraseña" class="form-control" placeholder="Ingrese su contraseña" />
    </div>

    <div class="mb-3">
        <label class="form-label">Color de Camisa</label>
        <input type="color" name="color-camisa" class="form-control form-control-color" />
    </div>

    <div class="mb-lg-2">
        <button type="button" class="btn btn-primary">Enviar</button>
        <button type="button" class="btn btn-secondary">Cancelar</button>

    </div>
</form>

