@*Listado de Proyectos*@
@if (Model.Proyectos is null)
{
    <div class="text-center" style="padding-top: 5rem;">
        <h2> Mis Proyectos Recientes</h2>   
        <p>Aqui puede ver algunos de mis proyectos mas recientes.</p>
        <div class="container">
            <div class="row">
                @foreach (var Proyecto in Model.Proyectos)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img class="card-img-top p-1" src="@Proyecto.ImagenUrl" alt="@Proyecto.Titulo"/>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
} 


